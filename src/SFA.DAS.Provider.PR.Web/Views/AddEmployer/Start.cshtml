@model SFA.DAS.Provider.PR.Web.Models.AddEmployer.StartViewModel
@{
    ViewData["Title"] = "Add an employer start";
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">
            Add an employer
        </h1>
    </div>
    <div class="govuk-grid-column-two-thirds">
        <p class="govuk-body">
            Add an employer to your account. You can invite them to create an apprenticeship service account if they do not have one.
            If they have an account, you can ask them to add you as a training provider.
        </p>
        <p class="govuk-body">
            If an employer creates an account, you’ll automatically be added as a training provider. You’ll also be able to select the
            permissions you want from the employer.
        </p>
        <h2 class="govuk-heading-m">
            Before you start
        </h2>
        <p class="govuk-body">
            If you’re asking the employer to add you as a training provider, you’ll need the email address of your contact at the employer.
        </p>
        <p class="govuk-body">
            If you're inviting an employer to create an account, you'll also need the:
            <div class="govuk-details">
                <ul class="govuk-list govuk-list--bullet">
                    <li>employer PAYE reference and Account Office reference</li>
                    <li>first and last name of your contact at the employer</li>
                </ul>

                <div class="govuk-warning-text">
                    <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
                    <strong class="govuk-warning-text__text">
                        <span class="govuk-visually-hidden">Warning</span>
                        You must have the employer’s consent to use their details before inviting them to create an account or asking them to add you as a training provider.
                    </strong>
                </div>
            </div>
        </p>
        <a href="@Model.ContinueLink" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
            Start now
            <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
            </svg>
        </a>
    </div>
    <div class="govuk-grid-column-one-third">
        <hr />
        <p class="govuk-body">
            Search your employers and view and update your permissions.<br/>
            <a href="@Model.ViewEmployersAndPermissionsLink">View employers and permissions</a>
        </p>
    </div>
</div>