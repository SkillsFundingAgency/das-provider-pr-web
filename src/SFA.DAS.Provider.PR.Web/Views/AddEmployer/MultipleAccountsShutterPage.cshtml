@using SFA.DAS.Provider.PR.Web.Infrastructure
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SFA.DAS.Provider.PR.Web.Models.AddEmployer.MultipleAccountsShutterPageViewModel
@{
    ViewData["Title"] = "multiple organisations linked";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">
            Contact the employer
        </h1>
    </div>
    <div class="govuk-grid-column-two-thirds">
        <p class="govuk-body">
            You cannot add this employer because there are multiple organisations linked to their details. They can add you to the relevant organisation in the Manage training providers page of their account. 
        </p>
        <div class="govuk-button-group">
            <a class="govuk-link" href="@Model.AddLink">Add another employer</a>
        </div>
    </div>
</div>