@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SFA.DAS.Provider.PR.Web.Infrastructure
@model SFA.DAS.Provider.PR.Web.Models.AddEmployer.AddPermissionsViewModel
@{
    ViewData["Title"] = "Change permissions";
}
@section breadcrumb {
    <a href="@Model.BackLink" class="govuk-back-link">Back</a>
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="_validationSummary" />
        <form asp-route="@RouteNames.ChangePermissions" method="POST">
            <input asp-for="Email" id="email" type="hidden" />
            <input asp-for="OrganisationName" id="legalName" type="hidden" />
            <input asp-for="CancelLink" id="cancelLink" type="hidden" />
            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h1 class="govuk-fieldset__heading">
                            Request permissions
                        </h1>
                    </legend>
                    <p class="govuk-body">
                        Select the permissions you want to request from @Model.OrganisationName.
                    </p>
                    <partial name="_PermissionChoices"/>
                </fieldset>
            </div>
            <div class="govuk-button-group">
                <button type="submit" id="continue" class="govuk-button" data-disable-on-submit="true">Confirm</button>
                <a class="govuk-link" href="@Model.CancelLink">Cancel</a>
            </div>
        </form>
    </div>
</div>