@using SFA.DAS.Provider.PR.Web.Infrastructure
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SFA.DAS.Provider.PR.Web.Models.AddEmployer.PayeAornNotCorrectShutterPageViewModel
@{
    ViewData["Title"] = "Paye and Aorn not correct";
}
@section breadcrumb {
    <a href="@Model.BackLink" class="govuk-back-link">Back</a>
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">
            The details you entered did not match HMRC records
        </h1>
    </div>
    <div class="govuk-grid-column-two-thirds">
        <p class="govuk-body">
            We could not match the details you entered with HMRC records.
        </p>
        <p class="govuk-body">
            The employer PAYE reference or Accounts Office reference may be incorrect. Go back to make sure you’ve entered the details correctly.
        </p>
        <p class="govuk-body">
            If you have entered the correct details, the reason they might not match HMRC records may be because the employer has not run payroll yet.
        </p>
        <p class="govuk-body">
            It might take 10 working days from the employer running payroll until you can create an account for them.
        </p>
    </div>
</div>