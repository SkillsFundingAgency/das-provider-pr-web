@using SFA.DAS.Provider.PR.Web.Infrastructure
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SFA.DAS.Provider.PR.Web.Models.AddEmployer.InviteAlreadySentShutterPageViewModel
@{
    ViewData["Title"] = "Invitation already sent";
}
@section breadcrumb {
    <a href="@Model.BackLink" class="govuk-back-link">Back</a>
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">
            Invitation sent
        </h1>
    </div>
    <div class="govuk-grid-column-two-thirds">
        <p class="govuk-body">
            <div class="govuk-inset-text">
                <p class="govuk-!-font-size-24">@Model.EmployerName.ToUpper() </p>
                Employer PAYE reference: @Model.PayeReference <br/>
                Accounts Office reference: @Model.Aorn

            </div>
        </p>
        <p class="govuk-body">
            Your organisation has already invited this employer to create an account or add you as a training provider. <strong>@Model.Email</strong> is not linked to this account.
        </p>
        <div class="govuk-button-group">
            <p class="govuk-body">
                <a class="govuk-link" href="@Model.EmployerAccountLink">Employer account details for @Model.EmployerName.ToUpper()</a>
            </p>
        </div>
    </div>
</div>