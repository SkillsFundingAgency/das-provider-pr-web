@using SFA.DAS.Provider.PR.Web.Infrastructure
@model RequestPermissionsViewModel
@{
    ViewData["Title"] = "Request Permissions";
}
@section breadcrumb {
    <a href="@Model.BackLink" class="govuk-back-link govuk-!-margin-top-7">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="_validationSummary" />
        <form asp-route="@RouteNames.RequestPermissions" method="post">
            <div class="govuk-!-width">
                <h1 class="govuk-heading-l govuk-!-margin-bottom-6">Request permissions</h1>
                <p class="govuk-body govuk-!-margin-bottom-8">Select the permissions you want to request from @Model.AccountLegalEntityName.</p>
            </div>

            <div class="govuk-!-width">
                <partial name="_PermissionChoices"/>
                <div class="govuk-button-group">
                    <button type="submit" id="continue" class="govuk-button" data-disable-on-submit="true">Send request</button>
                    <a class="govuk-link" href="@Model.BackLink">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
